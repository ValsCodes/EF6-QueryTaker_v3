@{
    ViewBag.Title = "Home Page";
}

<html>
<head>
    <title>Home</title>
    <style>
         body {
             color: black;
         }

         .hero-main {
             position: relative;
             background-image: url('../../common/images/laptop.jpg');
             background-repeat: no-repeat;
             height: 75vh;
             background-size: cover;
             z-index: 1000; 
         }

             .hero-main::before {
                 content: "";
                 position: absolute;
                 top: 0;
                 left: 0;
                 width: 100%;
                 height: 100%;
                 background-color: rgba(0, 0, 0, 0.5); 
                 z-index: 100;
             }

        .hero-text h1{
            position: relative; /* This ensures z-index is applied correctly */
            z-index: 200; /* Above the overlay */
            color: white; /* Sets the text color to white */
            text-align: center; /* Optionally centers the text */
            margin: 0;
            padding-top: 20%;
            margin-bottom:2%;/* Adjusts the position of the text vertically; adjust as needed */
        }

        .hero-text a{
            position: relative; /* This ensures z-index is applied correctly */
            z-index: 250; /* Above the overlay */
            color: white; /* Sets the text color to white */
            margin: 0;
        }


    </style>   
</head>

<body>
    <main>
        <div class="hero-main">
            <div class="hero-text align-content-lg-center">
                <h1>You Have a Problem?</h1>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Queries")" class="btn btn-primary">Create a Ticket</a>
                </div>
            </div>
        </div>
    </main>
</body>

</html>